@model List<ExpenseTracker.Models.Expense>

<!DOCTYPE html>
<html>
<head>
    <title>Expense List</title>
</head>

<body style="margin:0; font-family:Segoe UI, Arial; background:#f4f6f8;">

    
    <div style="background:#2c3e50; padding:18px; color:white; text-align:center;">
        <h1 style="margin:0;">Expense Tracker</h1>
        <p style="margin:5px 0 0;">All Expenses</p>
    </div>

   
    <div style="background:#34495e; padding:12px; text-align:center;">
        <a href="/" style="color:white; margin:0 15px; text-decoration:none;">Home</a>
        <a href="/Expense/Create" style="color:white; margin:0 15px; text-decoration:none;">Add Expense</a>
    </div>

    
    <div style="display:flex; justify-content:center; margin-top:30px;">

        <div style="
            background:white;
            padding:20px;
            width:90%;
            max-width:900px;
            border-radius:10px;
            box-shadow:0 4px 10px rgba(0,0,0,0.1);
        ">

            <h2 style="text-align:center; margin-bottom:20px;">Expense List</h2>

            <table style="width:100%; border-collapse:collapse;">
                <tr style="background:#ecf0f1;">
                    <th style="padding:10px; border:1px solid #ddd;">Title</th>
                    <th style="padding:10px; border:1px solid #ddd;">Amount</th>
                    <th style="padding:10px; border:1px solid #ddd;">Date</th>
                    <th style="padding:10px; border:1px solid #ddd;">Category</th>
                    <th style="padding:10px; border:1px solid #ddd;">Action</th>
                </tr>

                @foreach (var e in Model)
                {
                    <tr>
                        <td style="padding:8px; border:1px solid #ddd;">@e.Title</td>
                        <td style="padding:8px; border:1px solid #ddd;">₹ @e.Amount</td>
                        <td style="padding:8px; border:1px solid #ddd;">@e.Date.ToShortDateString()</td>
                        <td style="padding:8px; border:1px solid #ddd;">@e.Category?.CategoryName</td>
                        <td style="padding:8px; border:1px solid #ddd; text-align:center;">
                            <a href="/Expense/Edit/@e.ExpenseId"
                               style="margin-right:10px; color:#2980b9; text-decoration:none;">
                                Edit
                            </a>
                            <a href="/Expense/Delete/@e.ExpenseId"
                               onclick="return confirm('Delete this expense?')"
                               style="color:#e74c3c; text-decoration:none;">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </table>

            
            <div style="text-align:center; margin-top:20px;">
                <a href="/"
                   style="
                    padding:8px 20px;
                    background:#7f8c8d;
                    color:white;
                    text-decoration:none;
                    border-radius:5px;
                   ">
                    Back to Home
                </a>
            </div>

        </div>
    </div>

</body>
</html>
